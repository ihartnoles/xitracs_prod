<header>
  <%= link_to logo, root_path %>

  <nav class="round">
    <ul>
		<% if signed_in? %>
    		<li>[User: <font color=red><%= current_user.name %></font> Semester: <font color=red><%= Semester.find(session[:semester_id]).name if !session[:semester_id].nil?  %></font>]</li>
      	<li><%= link_to "Home", start_path %></li>
        	<li><%= link_to "Quick", quick_path if !current_user.ro %></li>
        	<li><%= link_to "Reports", reports_path if !current_user.ro %></li>
		  	<li><%= link_to "Logout", logout_path, method: :delete %></li>
		<% else %>
		  <li><%= link_to "Login", login_path %></li>
		<% end %>
    </ul>
  </nav>
  	<% if request.port == 3000 %>
 		<div class="error round">
  			<center>You are on the DEMO system</center>
  		</div>
  	<% end %>
</header>
